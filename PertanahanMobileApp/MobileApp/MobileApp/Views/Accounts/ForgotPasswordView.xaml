<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="{StaticResource colorPrimaryDark}"
             x:Class="MobileApp.Views.Accounts.ForgotPasswordView">
    <ContentPage.Content>
        <StackLayout  Margin="20" VerticalOptions="CenterAndExpand">
            <ActivityIndicator BackgroundColor="{StaticResource colorPrimary}" IsRunning="{Binding IsBusy}"/>
            <Entry Text="{Binding Email}" Placeholder="Email/UserName"/>
            <Button Text="Kirim" MinimumWidthRequest="100" Command="{Binding SendCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>