<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Title="Home"
             x:Class="MobileApp.Views.Home" BackgroundColor="{StaticResource colorPrimaryDark}" >
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="bpn1.png" WidthRequest="150"/>
            </StackLayout>

            <StackLayout Grid.Row="1" HorizontalOptions="Center"  VerticalOptions="Center">
                <Label Text="SELAMAT DATANG" FontSize="25" HorizontalOptions="Center"/>
                <Label Text="APLIKASI MONITORING" FontSize="18" HorizontalOptions="Center"/>
                <Label Text="PELAYANAN PERTANAHAN" FontSize="18" HorizontalOptions="Center"/>
            </StackLayout>
            <StackLayout Grid.Row="2" HorizontalOptions="Center"  VerticalOptions="End">
                <Label Text="KANTOR PERTANAHAN DAN AGRARIA" FontSize="18" HorizontalOptions="Center"/>
                <Label Text="KABUPATEN JAYAPURA" FontSize="18" HorizontalOptions="Center"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>